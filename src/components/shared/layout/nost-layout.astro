---
import ActionStrip from "src/components/nost/action-strip.astro";
import Favicon from "src/components/shared/head/favicon.astro";
import "src/styles/global.css";

const noteId = Astro.props["note-id"];
---

<html>
	<head>
		<title>Nost - {noteId}</title>
		<link
			rel="stylesheet"
			href="https://unpkg.com/simpledotcss/simple.min.css"
		/>
		<slot name="head" />
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<Favicon />
	</head>
	<body>
		<slot />
		<ActionStrip note-id={noteId} />
	</body><style>
		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		body {
			font-family: system-ui, sans-serif;
			background: #f2f2f2;
			font-size: 16;
		}

		@media (prefers-color-scheme: dark) {
			body {
				background: #222;
			}
		}

		@media;
	</style>
</html>
